# Database Configuration
DATABASE_URL="postgresql://postgres:your_password_here@db:5432/event_tracker"

POSTGRES_DB=event_tracker
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_HOST=db
POSTGRES_PORT=5432

# FastAPI Configuration
ENVIRONMENT=development
DEBUG=true

# Application Settings
EMAIL_SYNC_INTERVAL_SECONDS=3600

# Security (generate secure random strings for production)
SECRET_KEY=your-secret-key-here

# Session Settings
# Name of the session cookie
SESSION_COOKIE=session
# Cookie domain (set for cross-subdomain cookies, e.g. .example.com). Leave empty for default host.
SESSION_DOMAIN=
# SameSite policy: lax | strict | none
SESSION_SAMESITE=lax
# Whether to mark the cookie Secure (required if SAMESITE=none in browsers)
SESSION_SECURE=false
# Max age in days for session persistence
SESSION_MAX_AGE_DAYS=7

# Google OAuth2
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback
FRONTEND_URL=http://localhost:5173
